<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <!-- Internal name for service (must be unique) -->
            <name>QIANBASE</name>
            <!-- display name in Ambari UI -->
            <displayName>QianBase</displayName>
            <!-- Description of service - will be displayed when user clicks add service -->
            <comment>Transactional SQL-on-Hadoop Database</comment>
            <!-- Version of component-->
            <version>1.6</version>
            <quickLinksConfigurations>
              <quickLinksConfiguration>
                <fileName>quicklinks.json</fileName>
                <default>true</default>
              </quickLinksConfiguration>
            </quickLinksConfigurations>
            <themes>
              <theme>
                <fileName>theme.json</fileName>
                <default>true</default>
              </theme>
            </themes>
            <components>
                <component>
                  <name>QIANBASE_NODE</name>
                  <displayName>QianBase Node</displayName>
                  <category>SLAVE</category>
                  <!-- how many of these components are allowed in a cluster -->
                  <cardinality>1-1000</cardinality>
                  <!-- reference to (and details of) what script is to be used to install/stop/start/config the service -->
                  <commandScript>
                    <script>scripts/trafodionnode.py</script>
                    <scriptType>PYTHON</scriptType>
                    <timeout>5000</timeout>
                  </commandScript>
                  <customCommands>
                    <customCommand>
                      <name>Upgrade_QIANBASE_NODE</name>
                      <commandScript>
                        <script>scripts/trafodionnode.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>200</timeout>
                      </commandScript>
                    </customCommand>
                  </customCommands>
                </component>
                <component>
                  <name>QIANBASE_DCS</name>
                  <displayName>QianBase Connection Master</displayName>
                  <category>MASTER</category>
                  <!-- how many of these components are allowed in a cluster -->
                  <cardinality>1-6</cardinality>
                  <!-- reference to (and details of) what script is to be used to install/stop/start/config the service -->
                  <commandScript>
                    <script>scripts/trafodiondcs.py</script>
                    <scriptType>PYTHON</scriptType>
                    <timeout>5000</timeout>
                  </commandScript>
                  <customCommands>
                    <customCommand>
                      <name>Initialize</name>
                      <commandScript>
                        <script>scripts/trafodiondcs.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>500</timeout>
                      </commandScript>
                    </customCommand>
                    <customCommand>
                      <name>Connections_Restart</name>
                      <commandScript>
                        <script>scripts/trafodiondcs.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>200</timeout>
                      </commandScript>
                    </customCommand>
                    <customCommand>
                      <name>Upgrade_QIANBASE_DCS</name>
                      <commandScript>
                        <script>scripts/trafodiondcs.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>200</timeout>
                      </commandScript>
                    </customCommand>
		   </customCommands>
                </component>
                <component>
                  <name>QIANBASE_DBMGR</name>
                  <displayName>QianBase DB Manager</displayName>
                  <category>SLAVE</category>
                  <cardinality>1-6</cardinality>
                  <dependencies>
                    <dependency>
                      <name>QIANBASE/QIANBASE_DCS</name>
                      <scope>host</scope>
                      <auto-deploy>
                        <enabled>true</enabled>
                        <co-locate>QIANBASE/QIANBASE_DBMGR</co-locate>
                      </auto-deploy>
                    </dependency>
                  </dependencies>
                  <commandScript>
                    <script>scripts/dbmgr.py</script>
                    <scriptType>PYTHON</scriptType>
                    <timeout>500</timeout>
                  </commandScript>
                  <customCommands>
                    <customCommand>
                      <name>Upgrade_QIANBASE_DBMGR</name>
                      <commandScript>
                        <script>scripts/dbmgr.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>200</timeout>
                      </commandScript>
                    </customCommand>
                  </customCommands>
                </component>
                <component>
                  <name>QIANBASE_CLIENT</name>
                  <displayName>QianBase Client</displayName>
                  <category>CLIENT</category>
                  <commandScript>
                    <script>scripts/client.py</script>
                    <scriptType>PYTHON</scriptType>
                    <timeout>300</timeout>
                  </commandScript>
                  <customCommands>
                    <customCommand>
                      <name>Upgrade_QIANBASE_CLIENT</name>
                      <commandScript>
                        <script>scripts/client.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>200</timeout>
                      </commandScript>
                    </customCommand>
                  </customCommands>
                  <configFiles>
                    <configFile>
                      <type>env</type>
                      <fileName>client_config</fileName>
                      <dictionaryName>clientconf</dictionaryName>
                    </configFile>
                    <configFile>
                      <type>env</type>
                      <fileName>odbcinst.ini</fileName>
                      <dictionaryName>clientodbc</dictionaryName>
                    </configFile>
                  </configFiles>
                </component>
            </components>
            <commandScript>
              <script>scripts/trafodion.py</script>
              <scriptType>PYTHON</scriptType>
              <timeout>150</timeout>
            </commandScript>
            <configFiles>
              <configFile>
                <type>env</type>
                <fileName>trafodion-env.sh</fileName>
                <dictionaryName>trafodion-env</dictionaryName>
              </configFile>
              <configFile>
                <type>xml</type>
                <fileName>trafodion-site.xml</fileName>
                <dictionaryName>trafodion-site</dictionaryName>
              </configFile>
              <configFile>
                <type>env</type>
                <fileName>traf-cluster-env.sh</fileName>
                <dictionaryName>traf-cluster-env</dictionaryName>
              </configFile>
              <configFile>
                <type>env</type>
                <fileName>dcs-env.sh</fileName>
                <dictionaryName>dcs-env</dictionaryName>
              </configFile>
              <configFile>
                <type>env</type>
                <fileName>log4j.properties</fileName>
                <dictionaryName>dcs-log4j</dictionaryName>
              </configFile>
              <configFile>
                <type>xml</type>
                <fileName>rest-site.xml</fileName>
                <dictionaryName>rest-site</dictionaryName>
              </configFile>
              <configFile>
                <type>xml</type>
                <fileName>dcs-site.xml</fileName>
                <dictionaryName>dcs-site</dictionaryName>
              </configFile>
            </configFiles>
            <!-- what yum packages need to be installed -->
            <osSpecifics>
              <osSpecific>
                <osFamily>redhat6</osFamily>
                <packages>
                   <package><name>QianBase</name></package>
                </packages>
              </osSpecific>
              <osSpecific>
                <osFamily>redhat7</osFamily>
                <packages>
                   <package><name>QianBase</name></package>
                </packages>
              </osSpecific>
            </osSpecifics>
            <requiredServices>
                <service>HDFS</service>
                <service>HBASE</service>
                <service>HIVE</service>
                <service>ZOOKEEPER</service>
            </requiredServices>
      	    <configuration-dependencies>
        	<config-type>trafodion-env</config-type>
        	<config-type>trafodion-site</config-type>
        	<config-type>traf-cluster-env</config-type>
        	<config-type>dcs-env</config-type>
        	<config-type>dcs-log4j</config-type>
        	<config-type>dcs-site</config-type>
        	<config-type>rest-site</config-type>
      	    </configuration-dependencies>
        </service>
    </services>
</metainfo>
