fil=$1
if [ "$fil" = "" ]; then
  echo "Usage: $0 filename"
  exit 1
fi

# table statistics show 13 instead of 3 on 2-node clusters
# modify result to match single-node for those queries only
fil=$1
sed "
s/org.trafodion.sql.*/stackTraceRemoved/g
/statistics/,+6s/13/ 3/
" $fil
