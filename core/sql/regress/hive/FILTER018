fil=$1
if [ "$fil" = "" ]; then
  echo "Usage: $0 filename"
  exit 1
fi

# For HDFS file sizes, filter for both cases of replication=1 and 
# replication=2 (affects second number returned by dfs du)
sed "
s/Logging Location:.*/Loggin Location:@loggingLocation@/
s/Time:.*/Time:@time@/
s/snapshot_temp_location.*/snapshot_temp_location location/g
s/\(778224\).*\(778224\)\(.*\)/\1\3/g
s/\(778224\).*\(1556448\)\(.*\)/\1\3/g
s/\(78431\).*\(78431\)\(.*\)/\1\3/g
s/\(778224\).*\(1556448\)\(.*\)/\1\3/g
s/\(78431\).*\(156862\)\(.*\)/\1\3/g
s/TRAF_regr:TRAFODION.HBASE/TRAFODION.HBASE/g
/^org\.apache\.hadoop/d
/^org\.trafodion/d
s/^\*\*\* WARNING\[8436\].*/Warning 8436 or 8577 removed/g
s/^\*\*\* WARNING\[8577\].*/Warning 8436 or 8577 removed/g
" $fil
