# short host name for monitor
node=${1%%.*}

RETRY_COUNT=5

echo "Removing znodes (if any): /trafodion/$TRAF_INSTANCE_ID/cluster/running/$node"
echo "                          /trafodion/$TRAF_INSTANCE_ID/monitor/master/$node"
echo
if [ -f $TRAF_HOME/sql/scripts/swzkcli ]
then swzkcli <<EOF
  rmr /trafodion/$TRAF_INSTANCE_ID/cluster/running/$node
  rmr /trafodion/$TRAF_INSTANCE_ID/monitor/master/$node
EOF
else
  count=1
  hbase zkcli <<EOF
  rmr /trafodion/$TRAF_INSTANCE_ID/cluster/running/$node
  rmr /trafodion/$TRAF_INSTANCE_ID/monitor/master/$node
EOF
  rc=$?
  while [[ $rc -ne 0 && $count -le $RETRY_COUNT ]]; do
    echo "*** Retry for $count time(s) on removing znodes in hbase zkcli ..."
    rc=$?
    hbase zkcli <<EOF
    rmr /trafodion/$TRAF_INSTANCE_ID/cluster/running/$node
    rmr /trafodion/$TRAF_INSTANCE_ID/monitor/master/$node
EOF
    let count=$count+1
  done
fi
