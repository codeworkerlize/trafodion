if [ $# -ne 1 ]; then
	echo "Usage: `basename $0 .sh` <process-id>" 1>&2
	exit 1
fi

if ! [ -x "$(command -v jstack)" ]; then
   echo 'Error: Required software jstack is not installed.' 1>&2
   exit 1
fi

if [ ! -r /proc/$1 ]; then
	echo "Process $1 not found." 1>&2
	exit 1
fi

jstack -l $1 2>&1

