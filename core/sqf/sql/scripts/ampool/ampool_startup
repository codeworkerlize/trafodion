. $TRAF_HOME/sql/scripts/ampool/setup_ampool_env

mkdir -p ${AMPOOL_DBLOC}/${AMPOOL_LOCATOR}
mkdir -p ${AMPOOL_DBLOC}/${AMPOOL_SERVER}

${AMPOOL_HOME}/bin/mash <<EOF

start locator --name=${AMPOOL_LOCATOR} --port=${AMPOOL_LOCATOR_PORT} --dir=${AMPOOL_DBLOC}/${AMPOOL_LOCATOR} --properties-file=${AMPOOL_SCRIPTS}/ampool_locator.properties

start server --name=${AMPOOL_SERVER} --server-port=${AMPOOL_SERVER_PORT} --dir=${AMPOOL_DBLOC}/${AMPOOL_SERVER} --log-level=info --classpath=${CLASSPATH}

EOF

${AMPOOL_SCRIPTS}/ampool_undeploy
${AMPOOL_SCRIPTS}/ampool_deploy

