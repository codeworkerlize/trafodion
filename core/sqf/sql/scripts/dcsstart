#Check if Trafodion is up and operational
trafcheck -f > /dev/null
sq_stat=$?
if ( [ $sq_stat == 0 ] || [ $sq_stat == 1 ] ); then

   # Load shared cache
   $TRAF_HOME/sql/scripts/load_shared_cache init
   sc_ret=$?
   if [ $sc_ret = 0 ]; then
      echo "Load of Shared Segment Metadata Cache completed"
   fi
   if [ $sc_ret = 1 ]; then
      echo "Load of Shared Segment Metadata Cache failed, internal error"
   fi
   if [ $sc_ret = 2 ]; then
      echo "Load of Shared Segment Metadata Cache failed, SQL is not available"
   fi

   # Load shared data cache
   $TRAF_HOME/sql/scripts/load_shared_data_cache init
   sc_ret1=$?
   if [ $sc_ret1 = 0 ]; then
      echo "Load of Shared Segment Data Cache completed"
   fi
   if [ $sc_ret1 = 1 ]; then
      echo "Load of Shared Segment Data Cache failed, internal error"
   fi
   if [ $sc_ret1 = 2 ]; then
      echo "Load of Shared Segment Data Cache failed, SQL is not available"
   fi

   DCS_START_CMD=${DCS_INSTALL_DIR}/bin/start-dcs.sh

   if [ -z ${DCS_INSTALL_DIR} ]; then
      echo "DCS Install dir location not set via the env variable DCS_INSTALL_DIR."
      exit 1;
   fi

   echo "Starting the DCS environment now"
   ${DCS_START_CMD}
   cds
else
   echo "DCS is not started. Please start Trafodion ..."
   exit 1
fi
