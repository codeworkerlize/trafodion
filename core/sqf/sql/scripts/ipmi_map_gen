#!/bin/bash

# 
# A simple script that drives the generation of the file 'ipmi_host_map'.
# The generated file 'ipmi_host_map' is used by the SNMP trap watcher.
#
# Please see some instructions in the file 'ipmi_map_gen_node'.
#

edb_pdsh -a "sudo -E $TRAF_HOME/sql/scripts/ipmi_map_gen_node" | awk '{printf("%s %s\n",$2,$3) ;}' | sort > $TRAF_CONF/ipmi_host_map

pdcp -p `trafconf -wname` ${TRAF_CONF}/ipmi_host_map ${TRAF_CONF}

