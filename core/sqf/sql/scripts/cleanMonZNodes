if [[ -e $TRAF_CONF/sqconfig ]]; then
   node_count=`grep -o 'node-name=.[A-Za-z0-9\.\-]*' $TRAF_CONF/sqconfig | cut -d "=" -f 2 | cut -d ";" -f 1 | sort -u | wc -l`
else
   node_count=1
fi

if  [[ -n "$node_count" ]] && [[ "$node_count" -gt "1" ]]; then    
   if [[ -z $NODES ]]; then
      NODES=`trafconf -short`
   fi

   if [[ -z $NODES ]]; then
     echo "*** Found no nodes via trafconf. Run sqgen..." 
     usage
     exit 1
   fi

   echo
   echo "*** Nodes used : $NODES" 

   for node in $NODES
   do
      echo
      echo "*** Removing znodes for: $node...."
      cleanZKmonZNode $node
   done
fi

