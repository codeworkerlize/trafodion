function LogIt {
    echo  "`date`: $1" >> $TRAF_LOG/startup.log
}

lv_prog_name="ckillall"

lv_prev_shell_PS1=$SQ_PS1
if [ -z "$lv_prev_shell_PS1" ]; then
  lv_execute_killall=1
else
  read -p 'Do you really want to continue? y/n : ' lv_key
  if [ "$lv_key" == "y" ]; then
      lv_execute_killall=1
  fi
fi

if [ "$lv_execute_killall" == "1" ]; then
    dcsstop 
    cmonstop
    nmonstop
    mgblty_stop 2>$TRAF_LOG/mgblty_err.log
    reststop
    edb_pdsh -a "$TRAF_HOME/sql/scripts/pkillall"
    #directly read flag from the file
    ENABLE_ROW_LEVEL_LOCK=0
    LOCK_FLAGE=`grep "^[    ]*ENABLE_ROW_LEVEL_LOCK=.*" ${TRAF_CONF}/ms.env.custom | tail -n 1 |awk '{split($1,n,"=");print n[2]}'`
    if [ "${LOCK_FLAGE}" != "" ] ; then
        expr match "${LOCK_FLAGE}" "[0|1]" &>/dev/null
        if [ $? != 0 ]; then
            #only support for ENABLE_ROW_LEVEL_LOCK=0 or ENABLE_ROW_LEVEL_LOCK=1
            echo "WARNING: ENABLE_ROW_LEVEL_LOCK is invaild on ${TRAF_CONF}/ms.env.custom"
        else
            ENABLE_ROW_LEVEL_LOCK=1
        fi
    fi

    if [[ ${ENABLE_ROW_LEVEL_LOCK} -eq 1 ]]; then
        lv_msg="clean all transactions in hbase"
        echo
        lock_clean=`rsci -t lock_clean -force`
        echo "$lv_msg, result: $lock_clean"
    fi

    LogIt "$lv_prog_name"
else
    echo "$lv_prog_name not executed"
fi


