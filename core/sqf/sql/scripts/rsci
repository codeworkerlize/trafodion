JAVAHOME=`echo $JAVA_HOME`
if [ ! -x  "${JAVAHOME}/bin/java" ]; then
    echo "***Warning***: Missing JAVA_HOME in the environment. "
else
   PATH=${JAVAHOME}/bin:$PATH
   export PATH
fi

TRAF_HOME=`echo $TRAF_HOME`
if [ -n "${TRAF_HOME}" ]; then
    if [ -d "${TRAF_HOME}/export/lib" ]; then
        #use -jar instead of -cp to avoid wrong version jar
        java -jar "${TRAF_HOME}/export/lib/hbase-trx-rsclient-${TRAFODION_VER}.jar" $*
        exit
    fi
fi

echo "***Warning***: Missing TRAF_HOME in the environment. "
