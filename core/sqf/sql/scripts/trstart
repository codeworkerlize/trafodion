#Trafodion startup Script. 

function hms
{
  seconds=$elapsed_seconds
  hours=$((seconds / 3600))
  seconds=$((seconds % 3600))
  minutes=$((seconds / 60))
  seconds=$((seconds % 60))
  echo " $hours hour(s) $minutes minute(s) $seconds second(s)"
}

STARTtime=$(date +%s)

echo  "***"
echo  "*** Starting Trafodion Environment ***"
echo  "***"

trafstart "$@"
traf_start_status=$?
if [[ $traf_start_status != 0 ]]; then
    echo "trafstart failed ..."
    exit $traf_start_status
fi

# Don't start Connectivity Service if in agent mode
if [[ -z ${TRAF_AGENT} ]]; then
    # Start the Connectivity Service
    echo  "***"
    echo  "*** Starting Trafodion Connectivity Service"
    echo  "***"
    connstart
else
    echo  "***"
    echo  "*** Bypassed Trafodion Connectivity Service"
    echo  "***"
fi

echo
STOPtime=$(date +%s)
elapsed_seconds=$(( $STOPtime - $STARTtime))
printf "Startup time "
hms  "$elapsed_seconds"
echo
