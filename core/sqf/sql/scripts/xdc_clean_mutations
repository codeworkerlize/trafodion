function Usage {
    echo "Usage: `basename $0` [-v]"
    echo
    echo "-v                      : Verbose"
    echo
}

if [ -z $JAVA_HOME ]; then
    echo "The environment variable \$JAVA_HOME has not been set"
    echo "Please ensure \$TRAF_HOME/sqenv.sh has been sourced."
    echo
    exit 1;
fi

mkdir -p $TRAF_LOG
lv_stderr_file="$TRAF_LOG/xdc_clean_mutations.log"

declare -i lv_verbose=0
lv_verbose_string=""

while getopts "vh" lv_arg $1 $2 $3 $4 $5 $6 $7 $8 $9
do
    case $lv_arg in

        v)
            let lv_verbose=1
            lv_verbose_string="-v"
            ;;

        h)
            lv_help=1
            Usage
            exit 0
            ;;
    esac
done

# set it to 0 within this script execution else the invocation of 
# other scripts might result in some extraneous output that can
# confuse the execution of this one.
SQ_VERBOSE=0

lv_my_cluster_id=`xdc -getmyid`
if [ $? '!=' 0 ]; then
    echo "Error getting my cluster id."
    echo "Please check the health of the local Zookeeper/HBase instance and retry after the problem is fixed."
    exit 1
fi

date
echo "`basename $0` will perform the following steps:"
echo " - Remove any mutation files not associated with an incremental backup."
echo " - These files are not pending and would have been used in an xdc_peer_up operation "
echo

export LD_PRELOAD=${JAVA_HOME}/jre/lib/${JRE_LIB_DIR}/libjsig.so:${TRAF_HOME}/export/lib${SQ_MBTYPE}/libseabasesig.so

if [ ${lv_verbose} '==' 1 ]; then
    echo "Stderr being written to the file: ${lv_stderr_file}"
fi

# Check the peer if the recovery is complete for the synchronous tables
echo "`date`: Remove unneeded mutation files " | tee -a ${lv_stderr_file}
$JAVA_HOME/bin/java org.apache.hadoop.hbase.pit.XDC ${lv_verbose_string} x 2>> ${lv_stderr_file} | tee -a ${lv_stderr_file}
    lv_exit=${PIPESTATUS[0]}
    if [ ${lv_exit} '!=' 0 ]; then
       echo "Error trying to remove unneeded mutation files. Please retry after the problem is fixed. Exitting..."
       exit 1
    fi
echo

echo "`date`: Done with `basename $0`. Detailed output in the file ${lv_stderr_file}."

