# This file is to config Appender for MXSSCP
# The config of output is Rolling File Appender

log4cplus.logger.SQL.SSCP=INFO,sscpAppender
log4cplus.appender.sscpAppender=log4cplus::RollingFileAppender
log4cplus.appender.sscpAppender.File=${TRAF_LOG}/sscp.${HOSTNAME}.log
log4cplus.appender.sscpAppender.MaxFileSize=100MB
log4cplus.appender.sscpAppender.MaxBackupIndex=2
log4cplus.appender.sscpAppender.UseLockFile=false
log4cplus.appender.sscpAppender.File.AddPid=true
log4cplus.appender.sscpAppender.layout=log4cplus::PatternLayout
log4cplus.appender.sscpAppender.layout.ConversionPattern=%D{%Y-%m-%d %H:%M:%S.%q}, %p, %c, %m%n
log4cplus.appender.sscpAppender.ImmediateFlush=true
log4cplus.additive.sscpAppender=false
log4cplus.appender.sscpAppender.Append=true;

# Object lock
log4cplus.logger.SQL.LOCK=INFO,sscpAppender
